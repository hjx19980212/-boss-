.wrap {
  position: relative;
  min-height: 100%;
}

.wrap .header {
  margin: 0;
  padding: 0;
  width: 100%;
  background: #fff;
  position: relative;
  height: 47px;
}

.wrap .header .logo {
  float: left;
  padding: 6px 0 0 15px;
  display: block;
  width: 100px;
  height: 32px;
}

.wrap .header .logo image {
  width: 100%;
  height: 100%;
}

.wrap .header .top-search {
  float: right;
  padding-top: 5px;
  padding-right: 20px;
  padding-bottom: 10px;
}

.wrap .header .top-search .ipt-wrap {
  position: relative;
}

.wrap .header .top-search .link-search {
  display: block;
  line-height: 22px;
  color: #c0c4cf;
  width: 100px;
  height: 26px;
  padding: 2px 13px;
  border: 1px #62d5c8 solid;
  border-radius: 15px;
  font-size: 13px;
}

.wrap .header .top-search .icon-search {
  position: absolute;
  right: 30px;
  top: 8px;
  width: 20px;
  height: 24px;
}

.main {
  position: relative;
  margin: 0;
}

.main .job-banner {
  background-color: #62d5c8;
  color: #fff;
  padding: 15px 18px;
}

.main .job-banner .name {
  font-size: 19px;
}

.main .job-banner .name .post {
  display: inline-block;
  width: 200px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main .job-banner .name .salary {
  float: right;
  font-size: 20px;
}

.main .job-banner .vline {
  font-size: 14px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.main .job-banner .job-tags {
  position: relative;
  padding-right: 75px;
}

.main .job-banner .job-tags .span {
  display: inline-block;
  font-size: 11px;
  border: 1px #fff solid;
  color: #fff;
  border-radius: 10px;
  padding: 0 8px;
  height: 22px;
  line-height: 22px;
  margin-right: 12px;
}

.main .job-author {
  background-color: #eefbf9;
  height: 53px;
  padding: 17px 18px;
  position: relative;
}

.main .job-author .figure {
  float: left;
}

.main .job-author .figure .head {
  display: block;
  width: 53px;
  height: 53px;
  border-radius: 100px;
}

.main .job-author .info-primary {
  margin-left: 68px;
  height: 53px;
}

.main .job-author .info-primary .name {
  font-size: 17px;
  padding-top: 5px;
  margin-bottom: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
  max-width: 85px;
}

.main .job-author .info-primary .link-like {
  display: inline-block;
  margin-left: 20px;
  padding-left: 20px;
  color: #fb7042;
  font-size: 14px;
  overflow: hidden;
}

.main .job-author .info-primary .link-like image {
  width: 14px;
  height: 14px;
}

.main .job-author .info-primary .gray {
  margin-right: 100px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #9fa3af;
  padding-top: 4px;
}

.main .job-author .btn-com {
  height: 31px;
  line-height: 31px;
  width: 100px;
  border-radius: 15px;
  display: inline-block;
  font-size: 14px;
  color: #fff;
  background-color: #5dd5c8;
  text-align: center;
  cursor: pointer;
  position: absolute;
  top: 30px;
  right: 10px;
}

.main .job-author .btn-com::after {
  border: none;
}

.main .job-detail {
  padding: 10px 18px 0;
}

.main .job-detail .job-sec {
  padding: 0 0 10px;
}

.main .job-detail .job-sec .h3 {
  color: #414a60;
  font-weight: 700;
  position: relative;
  line-height: 44px;
  font-size: 15px;
}

.main .job-detail .job-sec .h3::after {
  content: '';
  width: 15px;
  height: 1px;
  background-color: #62d5c8;
  position: absolute;
  left: 0;
  bottom: 0;
}

.main .job-detail .job-sec .text {
  padding-top: 11px;
  line-height: 26px;
  color: #7e8793;
  font-size: 15px;
}

.main .job-detail .reqular-box .detail-text {
  padding-top: 10px;
  color: #9fa3b0;
  line-height: 21px;
  font-size: 14px;
  word-break: break-all;
  word-wrap: break-word;
}

.main .job-detail .reqular-box .view-more {
  line-height: 32px;
  text-align: center;
  clear: both;
  position: relative;
  padding-top: 10px;
  display: block;
  font-size: 14px;
  color: #9fa3b0;
}

.main .job-detail .reqular-box .view-more .detail-layer {
  height: 50px;
  background: rgba(255, 255, 255, 0.8);
  position: absolute;
  width: 100%;
  left: 0;
  top: -50px;
}

.main .job-detail .reqular-box .business-info .h4 {
  color: #7e8793;
  font-size: 14px;
  font-weight: 400;
  padding: 10px 0;
}

.main .job-detail .reqular-box .business-info .business-detail {
  border: 1px #ebecef solid;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 12px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.main .job-detail .reqular-box .business-info .business-detail view {
  padding-left: 5px;
  padding-bottom: 5px;
  text-align: left;
  width: 40%;
  color: #9fa3b0;
  padding-right: 0;
}

.main .job-detail .reqular-box .business-info .view-business {
  border-top: 1px #ebecef solid;
  text-align: center;
  color: #9fa3b0;
  line-height: 38px;
  display: block;
  background-color: #fff;
}

.main .job-detail .reqular-box .business-info .view-business image {
  width: 15px;
  height: 15px;
}

.main .job-detail .job-sec .location-address {
  display: block;
  background-position: 5px -36px;
  padding-left: 25px;
  color: #62687a;
  padding: 5px 15px 5px 5px;
  font-size: 13px;
  border: 1px #ecedef solid;
  cursor: pointer;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10px;
}

.main .job-detail .job-sec .location {
  float: left;
  width: 16px;
  height: 16px;
  padding-right: 20px;
}

.main .job-detail .job-sec map {
  width: 100%;
}

.main .job-company {
  background-color: #eefbf9;
  padding: 16px 18px 13px;
  margin-top: 10px;
  display: block;
  height: 80px;
}

.main .job-company .company-logo {
  float: left;
}

.main .job-company .company-logo image {
  width: 64px;
  height: 64px;
  border-radius: 4px;
  background-color: #f7f7f7;
}

.main .job-company .info-primary {
  margin-left: 80px;
  min-height: 70px;
}

.main .job-company .info-primary .flex-box {
  display: flex;
}

.main .job-company .info-primary .flex-box .name {
  font-size: 17px;
  color: #414a60;
  flex: 1;
}

.main .job-company .info-primary .flex-box button {
  height: 31px;
  line-height: 31px;
  width: 100px;
  border-radius: 15px;
  display: inline-block;
  font-size: 14px;
  color: #fff;
  background-color: #5dd5c8;
  text-align: center;
  cursor: pointer;
}

.main .job-company .info-primary .flex-box button::after {
  border: none;
}

.main .job-company .info-primary .company {
  line-height: 21px;
  font-size: 12px;
  color: #414a60;
}

.main .job-company .info-primary .gray {
  line-height: 21px;
  font-size: 12px;
  color: #9fa3af;
}

.main .job-recomend {
  margin-top: 10px;
}

.main .job-recomend .h3 {
  font-size: 13px;
  color: #767f96;
  font-weight: 400;
  padding: 7px 18px;
}

.main .job-recomend .job-item {
  display: block;
  padding: 20px 18px;
  height: 50px;
  overflow: hidden;
  position: relative;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.main .job-recomend .job-item .job-logo {
  float: left;
}

.main .job-recomend .job-item .job-logo image {
  display: block;
  width: 47px;
  height: 47px;
  border-radius: 4px;
  background-color: #f7f7f7;
}

.main .job-recomend .job-item .info-primary {
  margin-left: 62px;
  color: #414a60;
}

.main .job-recomend .job-item .info-primary .name {
  line-height: 22px;
  margin-top: -2px;
  margin-bottom: 2px;
  height: 20px;
}

.main .job-recomend .job-item .info-primary .name .txt {
  display: block;
  width: 200px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 400;
  font-size: 16px;
  line-height: 16px;
  float: left;
}

.main .job-recomend .job-item .info-primary .name .red {
  text-align: center;
  line-height: 16px;
  float: right;
  font-size: 16px;
  color: #fc6c38;
}

.main .job-recomend .job-item .info-primary .flex-box {
  display: flex;
  font-size: 12px;
}

.main .job-recomend .job-item .info-primary .flex-box .company-info {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 2px;
  width: 100px;
}

.main .job-recomend .job-item .info-primary .flex-box .btn-commont {
  height: 31px;
  line-height: 31px;
  width: 100px;
  border-radius: 15px;
  flex-shrink: 0;
  background-color: #fff;
  color: #5dd5c8;
  margin-top: -1px;
  display: inline-block;
  border: 1px #5dd5c8 solid;
  font-size: 14px;
  text-align: center;
  cursor: pointer;
}
