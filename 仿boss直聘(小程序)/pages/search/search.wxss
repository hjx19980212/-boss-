.wrap {
  position: relative;
  min-height: 100%;
}

.header {
  width: 100%;
  background: #fff;
  position: relative;
}

.header .serach-bar {
  height: 55px;
  width: 100%;
  border-bottom: 1px solid #ededed;
}

.header .serach-bar .house {
  display: block;
  position: absolute;
  left: 18px;
  top: 18px;
  width: 18px;
  height: 18px;
  z-index: 10;
}

.header .serach-bar .city {
  display: block;
  position: absolute;
  left: 62px;
  top: 20px;
  font-size: 12px;
  color: #333;
  border-right: solid 1px rgba(0, 0, 0, 0.05);
  width: 44px;
  height: 15px;
  line-height: 15px;
  z-index: 10;
}

.header .serach-bar .city .icon {
  width: 15px;
  height: 15px;
  margin-top: -5px;
  position: absolute;
  top: 5px;
}

.header .serach-bar .ipt-search {
  margin: 0 auto;
  width: 58%;
  height: 29px;
  background-color: #f4f7f9;
  border: none;
  font-size: 14px;
  color: #8b96a6;
  line-height: 19px;
  border-radius: 15px;
  padding-left: 65px;
  position: absolute;
  left: 50px;
  top: 12px;
  z-index: 8;
}

.header .serach-bar .btn-search {
  color: #5dd5ca;
  background: 0 0;
  position: absolute;
  right: -10px;
  top: 0;
  font-size: 15px;
  line-height: 55px;
  height: 55px;
  display: block;
  width: 60px;
}

.header .serach-bar .btn-search::after {
  border: none;
}

.header .filter-bar {
  border-bottom: solid 1px #ebebeb;
}

.header .filter-bar .ul {
  display: flex;
  height: 37px;
  line-height: 37px;
}

.header .filter-bar .ul .li {
  flex: 1;
  text-align: center;
  box-sizing: border-box;
  font-size: 12px;
  text-indent: -5px;
  color: #aaa;
  position: relative;
}

.header .filter-bar .ul .selected {
  color: #484848;
}

.header .filter-bar .ul .li image {
  width: 15px;
  height: 15px;
  position: absolute;
  top: 10px;
}

.header .filter-content {
  position: fixed;
  width: 375px;
  height: 574px;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10;
  box-sizing: border-box;
  overflow: hidden;
}

.header .filter-content .scroller {
  position: absolute;
  z-index: 1;
  width: 100%;
}

.header .filter-content .scroller .ul .li {
  display: block;
  width: 100%;
  height: 50px;
  line-height: 50px;
  padding: 0 20px;
  color: #aaa;
  background: #fff;
  font-size: 16px;
}

.header .filter-content .scroller .ul .selected {
  background: #f8f8fa;
  color: #4b4b4b;
}

.main {
  position: relative;
}

.main .job-item {
  height: 91px;
  position: relative;
}

.main .job-item image {
  width: 59px;
  height: 59px;
  display: block;
  border: none;
  margin-left: 18px;
  margin-top: 16px;
  float: left;
  border-radius: 5px;
}

.main .job-item .text {
  margin-left: 96px;
  position: relative;
}

.main .job-item .text .title .h4 {
  width: 180px;
  position: absolute;
  font-size: 15px;
  color: #414a60;
  line-height: 15px;
  font-weight: 400;
  padding-top: 18px;
  margin-right: 90px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main .job-item .text .title .salary {
  font-style: normal;
  font-size: 19px;
  color: #fc6c38;
  position: absolute;
  right: 19px;
  top: 18px;
  line-height: 15px;
}

.main .job-item .text .name {
  font-size: 12px;
  color: #414a60;
  line-height: 28px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 19px;
  position: absolute;
  top: 30px;
}

.main .job-item .text .msg {
  line-height: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 19px;
  font-style: normal;
  font-size: 12px;
  color: #8892ac;
  display: inline-block;
  position: absolute;
  top: 55px;
}
